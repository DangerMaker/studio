<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:background="@drawable/linear_bg"
    android:id="@+id/MyEntryFormListItemLinearLayout"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >
<!-- 	<Button 
	  android:id="@+id/button"  
	  android:layout_width="80dip"
	  android:layout_height="wrap_content"
	  /> -->
	  <RelativeLayout android:layout_width="170dp"
	      android:layout_height="145dp"
	      >
	  <ImageView 
	      android:id="@+id/frontImageMyEntryFormList"
	      android:layout_width="160dip"
	      android:layout_height="140dip"
	      android:src="@drawable/userhw"
	      android:scaleType="centerCrop"
	      />
	  <ImageView android:id="@+id/ivStatusMyEntryFormList"
	      android:layout_width="160dp"
	      android:layout_height="wrap_content"
	      android:layout_alignParentBottom="true"
	      android:layout_marginBottom="5dp"
	      />
	  </RelativeLayout>
	      
	  <RelativeLayout android:orientation="vertical"
	      android:layout_width="0dp"
	      android:layout_weight="1"
	      android:layout_height="fill_parent"
	      android:layout_marginLeft="0dp"
	      >
	  <TextView 
	      android:id="@+id/tvGameTitleMyEntryFormList"
	      android:layout_width="wrap_content"
	      android:singleLine="true"
	      android:layout_height="wrap_content"
	      android:text=""
	      android:textSize="18dp"
	      android:textColor="#000000"
	      android:layout_marginTop="10dp"
	      />
	  <TextView 
	      android:id="@+id/tvParticipantPersonMyEntryFormList"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_below="@id/tvGameTitleMyEntryFormList"
	      android:textSize="13dp"
	      android:textColor="#5f5b5b"
	      android:text="参赛人员："
	      />
	  <TextView 
	      android:id="@+id/tvTimeMyEntryFormList"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:singleLine="true"
	      android:textSize="13dp"
	      android:textColor="#5f5b5b"
	      android:text="时间:"
	      android:layout_below="@id/tvParticipantPersonMyEntryFormList"
	      />
	  <TextView 
	      android:id="@+id/tvLocationMyEntryFormList"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:singleLine="true"
	      android:textColor="#5f5b5b"
	      android:textSize="13dp"
	      android:text="地点："
	      android:layout_below="@id/tvTimeMyEntryFormList"
	      />
	  <ImageView 
	      android:id="@+id/tvModifyInformationMyEntryFormList"
	      android:layout_width="80dp"
	      android:layout_height="50dp"
	      android:layout_below="@id/tvLocationMyEntryFormList"
	      android:layout_alignParentBottom="true"
	      android:layout_marginBottom="10dp"
	      android:layout_marginTop="5dp"
	      android:clickable="false"
	      />
	  <ImageView 
	      android:id="@+id/tvPayMyEntryFormList"
	      android:layout_width="80dp"
	      android:layout_height="50dp"
	      android:layout_below="@id/tvLocationMyEntryFormList"
	      android:layout_toRightOf="@id/tvModifyInformationMyEntryFormList"
	      android:layout_alignParentBottom="true"
	      android:layout_marginBottom="10dp"
	      android:layout_marginTop="5dp"
	      android:clickable="false"
	      />
	  <!-- 
	  <ImageView 
	      android:id="@+id/tvFinishEntryFormMyEntryFormList"
	      android:layout_width="80dp"
	      android:layout_height="50dp"
	      android:layout_below="@id/tvLocationMyEntryFormList"
	      android:layout_toRightOf="@id/tvModifyInformationMyEntryFormList"
	      android:layout_alignParentBottom="true"
	      android:layout_marginBottom="10dp"
	      android:layout_marginTop="5dp"
	      android:src="@drawable/pay_my_entry_form"
	      />
	       -->
	  </RelativeLayout>
</LinearLayout>