<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/BackgroudLightGrey">
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="@color/White">
  <View 
      android:layout_height="1dp"

      android:layout_width="fill_parent"
      android:background="@color/BtnGrey"/>
  
  <LinearLayout 
      android:id="@+id/linearreceivepush"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="@color/White"
      android:orientation="horizontal">
      <ImageView 
          android:id="@+id/imgreceivepush"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="10dp"/>
      <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:text="接受推送信息"
      android:layout_marginLeft="10dp"
      android:textColor="#000000"
      />
      <!--
      <com.zcw.togglebutton.ToggleButton
	  android:id="@+id/togglebtntuisong"
	  android:layout_gravity="center_vertical"
	  android:layout_marginLeft="160dp"
	  android:layout_width="54dp"
	  android:layout_height="30dp" >
      </com.zcw.togglebutton.ToggleButton>
      -->
  </LinearLayout>
  <View 
      android:layout_height="1dp"
      android:layout_width="340dp"
      android:layout_gravity="right"
      android:background="@color/BtnGrey"/>
  <LinearLayout 
      android:id="@+id/linearcleanmemory"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="@color/White"
      android:orientation="horizontal"
      >
      <ImageView 
          android:id="@+id/imgcleanmemory"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="10dp"/>
      <TextView 
          android:text="清理缓存"
          android:layout_marginLeft="10dp"
          android:layout_height="wrap_content"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_gravity="center_vertical"
          android:textColor="#000000"/>
      <TextView 
          android:id="@+id/texthuancun"
          android:text="0.0M"
          android:textColor="@color/Black"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          />
      <ImageView 
          android:src="@drawable/xiangyou_icon"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginRight="12dp"
          android:layout_marginLeft="10dp"/>
  </LinearLayout>
  <View 
      android:layout_height="1dp"
      android:layout_width="340dp"
      android:layout_gravity="right"
      android:background="@color/BtnGrey"/>
  <LinearLayout 
      android:id="@+id/linearjiancexinbanben"
      android:layout_width="fill_parent"
      android:layout_height="60dp"
      android:background="@color/White"
      android:orientation="horizontal">
      <ImageView 
          android:src="@drawable/refresh_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="10dp"/>
      <TextView 
          android:text="检测新版本"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="10dp"
          android:textColor="#000000"/>
      <ImageView 
          android:src="@drawable/xiangyou_icon"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="222dp"/>
  </LinearLayout>
  <View 
      android:layout_height="1dp"
      android:layout_width="fill_parent"
      android:background="@color/BtnGrey"/>
  </LinearLayout>
  <View 
      android:layout_height="1dp"
      android:layout_marginTop="30dp"
      android:layout_width="fill_parent"
      android:background="@color/BtnGrey"/>
  <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/White">
  <LinearLayout 
      android:id="@+id/linearyijianfankui"
      android:layout_width="fill_parent"
      android:background="@color/White"
      android:layout_height="60dp"
      android:orientation="horizontal"
      >
      <ImageView 
          android:id="@+id/imgyijianfankui"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="10dp"/>
      <TextView 
          android:text="意见反馈"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="10dp"
          android:textColor="#000000"/>
      <ImageView 
          android:src="@drawable/xiangyou_icon"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="230dp"/>
  </LinearLayout>
  <View 
      android:layout_height="1dp"
      android:layout_width="340dp"
      android:layout_gravity="right"
      android:background="@color/BtnGrey"/>
  <LinearLayout 
      android:id="@+id/linearaboutus"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="@color/White"
      android:orientation="horizontal"
      >
      <ImageView 
          android:id="@+id/imgaboutus"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="10dp"/>
      <TextView 
          android:text="关于我们"
          android:layout_marginLeft="10dp"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_gravity="center_vertical"
          android:textColor="#000000"/>
      <ImageView 
          android:src="@drawable/xiangyou_icon"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="230dp"/>
  </LinearLayout>
  <View 
      android:layout_height="1dp"
      android:layout_width="fill_parent"
      android:background="@color/BtnGrey"/>
   </LinearLayout>
   <Button 
        android:id="@+id/btntuichudenglu"
        android:layout_marginTop="30dp"
        android:layout_height="45dp"
        android:layout_width="300dp"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:background="@drawable/shape_btn_blue_radius_5dip"
        android:layout_gravity="center"
        />
</LinearLayout>