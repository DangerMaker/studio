<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroudLightGrey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/White"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/BtnGrey" />

        <LinearLayout
            android:id="@+id/linearreceivepush"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/White"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgreceivepush"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="接受推送信息"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/cbReceivePush"
                android:layout_width="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"

                android:button="@null"
                android:background="@drawable/receivepush_selector"
                android:checked="true" />
            <!--
            <com.zcw.togglebutton.ToggleButton
            android:id="@+id/togglebtntuisong"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="160dp"
            android:layout_width="54dp"
            android:layout_height="30dp" >
            </com.zcw.togglebutton.ToggleButton>
            -->
        </LinearLayout>

        <View
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:layout_gravity="right"
            android:background="@color/BtnGrey" />

        <LinearLayout
            android:id="@+id/linearcleanmemory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/White"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgcleanmemory"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="清理缓存"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/texthuancun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="0.0M"
                android:textColor="@color/Black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/xiangyou_icon" />
        </LinearLayout>

        <View
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:layout_gravity="right"
            android:background="@color/BtnGrey" />

        <LinearLayout
            android:id="@+id/linearjiancexinbanben"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/White"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/refresh_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="检测新版本"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="222dp"
                android:src="@drawable/xiangyou_icon" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lineargetbind"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/White"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgc"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bind" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="账号绑定"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="230dp"
                android:src="@drawable/xiangyou_icon" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/BtnGrey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearyijianfankui"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/White"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgyijianfankui"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="意见反馈"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="230dp"
                android:src="@drawable/xiangyou_icon" />
        </LinearLayout>

        <View
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:layout_gravity="right"
            android:background="@color/BtnGrey" />

        <LinearLayout
            android:id="@+id/linearaboutus"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/White"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgaboutus"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="关于我们"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="230dp"
                android:src="@drawable/xiangyou_icon" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/BtnGrey" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/BtnGrey" />

    <LinearLayout
        android:id="@+id/linearchangepass"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/White"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgchangepass"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/change_passw" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="修改密码"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="230dp"
            android:src="@drawable/xiangyou_icon" />
    </LinearLayout>

    <Button
        android:id="@+id/btnlogout"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_btn_blue_radius_5dip"
        android:text="退出登录"
        android:gravity="center"
        android:textColor="#ffffff" />

    <View
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>