<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/game_info_content"
    android:background="#f4f5f5" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/main_toolbar_withpopwin" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
             >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ivFrontImageGameInformation"
                    android:layout_width="fill_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/addphoto" />

                <Button
                    android:id="@+id/btnFocusGameInformation"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="310dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btnfocusbg"
                    android:text="关注"
                    android:textColor="#ffffff"
                    android:visibility="invisible"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:background="#33000000"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvGameSponserGameInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="主办单位："
                        android:textColor="#ffffff"
                        android:textSize="12dp" >
                    </TextView>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tvGameOrganizerGameInformation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="承办单位："
                            android:textColor="#ffffff"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tvCountNowGameInformation"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="20dp"
                            android:text="已报名人数："
                            android:textColor="#ffffff"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/GameInformationLy1"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_below="@id/ivFrontImageGameInformation"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvGameTitleGameInformation"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tvGameStartTimeGameInformation"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="发布时间："
                        android:textColor="#727171" />
                </LinearLayout>

                <View
                    android:id="@+id/line1GameInformation"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/GameInformationLy1"
                    android:background="@color/BackgroudLightGrey" />

                <LinearLayout
                    android:id="@+id/GameInformationLy2"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/line1GameInformation"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/activities_time_icon" />

                    <TextView
                        android:id="@+id/tvGameTimeGameInformation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="活动时间："
                        android:textColor="#595757" />
                </LinearLayout>

                <View
                    android:id="@+id/line2GameInformation"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/GameInformationLy2"
                    android:background="@color/BackgroudLightGrey" />

                <LinearLayout
                    android:id="@+id/GameInformationLy3"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/line2GameInformation"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/entry_time_icon" />

                    <TextView
                        android:id="@+id/tvGameJoinDateGameInformation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="报名日期："
                        android:textColor="#595757" />
                </LinearLayout>

                <View
                    android:id="@+id/line3GameInformation"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/GameInformationLy3"
                    android:background="@color/BackgroudLightGrey" />

                <LinearLayout
                    android:id="@+id/GameInformationLy4"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/line3GameInformation"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/location_icon" />

                    <TextView
                        android:id="@+id/tvGameLocationGameInformation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="#595757" />
                </LinearLayout>

                <View
                    android:id="@+id/line4GameInformation"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/GameInformationLy4"
                    android:background="@color/BackgroudLightGrey" />

                <LinearLayout
                    android:id="@+id/GameInformationLy5"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/line4GameInformation"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/person_num_icon" />

                    <TextView
                        android:id="@+id/tvGameParticipantNumGameInformation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="参加人数："
                        android:textColor="#595757" />
                </LinearLayout>

                <View
                    android:id="@+id/line5GameInformation"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/GameInformationLy5"
                    android:background="@color/BackgroudLightGrey" />

                <LinearLayout
                    android:id="@+id/GameInformationLy6"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/line5GameInformation"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/money_icon" />

                    <TextView
                        android:id="@+id/tvGamePayFeeGameInformation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="费用：0"
                        android:textColor="#595757" />
                </LinearLayout>

                <View
                    android:id="@+id/line6GameInformation"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/GameInformationLy6"
                    android:background="@color/BackgroudLightGrey" />

                <LinearLayout
                    android:id="@+id/GameInformationLy7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line6GameInformation"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/intro_icon" />

                    <TextView
                        android:id="@+id/tvGameIntroGameInformation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="活动介绍："
                        android:textColor="#595757" />
                </LinearLayout>

                <View
                    android:id="@+id/line7GameInformation"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/GameInformationLy7"
                    android:background="@color/BackgroudLightGrey" />

                <ImageView
                    android:id="@+id/ivBriefImageGameInformation"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/line7GameInformation"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/ivBriefImageGameInformation" />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/btnIWannaJoinGameInformation"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#0082a4"
        android:gravity="center"
        android:text="我 要 报 名"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</RelativeLayout>