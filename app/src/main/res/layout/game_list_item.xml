<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameListItemLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="205dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/linear_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageGameList"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/addphoto" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvGameTitleGameList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxEms="13"
            android:singleLine="true"
            android:text="全民健身-健步走活动"
            android:textColor="#626262"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tvGamePersonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvGameTitleGameList"
            android:layout_below="@id/tvGameTitleGameList"
            android:layout_marginTop="4dp"
            android:text="报名人数："
            android:textColor="#9b9b9b"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvGamePersonNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tvGamePersonText"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/tvGamePersonText"
            android:text="1980"
            android:textColor="#ca565b"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/tvGameStatusGameList"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tvGameTitleGameList"
            android:layout_marginRight="6dp"
            android:paddingTop="1dp"
            android:src="@drawable/weibaoming" />

        <TextView
            android:id="@+id/tvGameTimeEndGameList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvGamePersonText"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:gravity="center_vertical"
            android:text="2016.9.30"
            android:textColor="#9b9b9b"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvGameTimeEndGameList_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvGamePersonText"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@id/tvGameTimeEndGameList"
            android:text="结束日期："
            android:textColor="#9b9b9b"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvGameTimeGameList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvGamePersonText"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tvGameTimeEndGameList_des"
            android:gravity="center_vertical"
            android:text="2016.4.19"
            android:textColor="#9b9b9b"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvGameTimeGameList_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvGamePersonText"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@id/tvGameTimeGameList"
            android:text="开始日期："
            android:textColor="#9b9b9b"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>