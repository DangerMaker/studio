<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/loginback"
    android:id="@+id/root">
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#00000000"
            android:text="@string/BackBtnIcon"
            android:textSize="40dp" 
            android:textColor="@color/BtnTextColorWhite"/>

    </LinearLayout>
    <LinearLayout
       
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backgroud_round_corner_grey"
        android:orientation="vertical" >
       
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/backgroud_round_corner_white"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/etPhoneNum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="@string/PleaseEnterYourPhoneNumber"
                android:inputType="phone"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:textSize="@dimen/edit_text_size_12sp" />
			<View android:layout_height="1px" 
			    android:background="@color/BackgroudLightGrey" 
			    android:layout_width="fill_parent"
			    >
			    
			</View> 
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="请输入新的密码"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:textSize="@dimen/edit_text_size_12sp"
                android:inputType="textPassword"/>
            <View android:layout_height="1px" 
			    android:background="@color/BackgroudLightGrey" 
			    android:layout_width="fill_parent"
			    >
			    
			</View> 
            <EditText
                android:id="@+id/etPasswordAgain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="请确认您的新密码"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:textSize="@dimen/edit_text_size_12sp"
                android:inputType="textPassword"/>
        </LinearLayout>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/backgroud_round_corner_white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >
           <EditText android:layout_width="0dp"
            android:layout_height="30dp"
            android:singleLine="true"
            android:id="@+id/etCode"
            android:background="#00000000"
            android:layout_weight="1"
           	android:paddingLeft="15dp"
           	android:paddingTop="8dp"
           	android:paddingBottom="8dp"
           	android:hint="验证码"
           	android:textSize="@dimen/edit_text_size_12sp"
           	/>
           <Button android:id="@+id/btnGetCode"
               android:layout_width="wrap_content"
               android:layout_height="30dp"
               android:gravity="center"
               android:text="获取验证码"
               android:paddingLeft="3dp"
               android:paddingRight="3dp"
               android:textColor="#ffffff"
               android:background="@drawable/shape_btn_blue_radius_5dip"/>
        </LinearLayout>
       
         <Button
            android:id="@+id/btnCertain"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_btn_blue_radius_10dip"
            android:text="确定"
            android:textColor="@color/BtnTextColorWhite" 
            android:textSize="@dimen/btn_text_size_18sp"/>
        </LinearLayout>

</RelativeLayout>
