<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/light_green"
    android:layout_height="match_parent">

    <include layout="@layout/main_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:background="@color/White">

        <TextView
            android:id="@+id/team_setting_id"
            style="@style/CreateTeamText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:text="团队ID：" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/edit_color_grey"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/divder_color_grey"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/edit_color_grey"/>


    <RelativeLayout
        android:id="@+id/team_setting_alter_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:background="@color/White">

        <TextView
            style="@style/CreateTeamText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:text="团头像：" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/team_setting_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center|left"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@drawable/defult_avatar"
            fresco:placeholderImageScaleType="fitCenter"  />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/edit_color_grey"
        />


    <RelativeLayout
        android:id="@+id/team_setting_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:background="@color/White">

        <TextView
            style="@style/CreateTeamText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:text="团名称：" />

        <TextView
            android:id="@+id/team_setting_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center|left"
            style="@style/CreateTeamText"
            android:text="奥菲>"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/edit_color_grey"
        />

    <RelativeLayout
        android:id="@+id/team_setting_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:background="@color/White">

        <TextView
            style="@style/CreateTeamText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:text="团简介：" />

        <TextView
            android:id="@+id/team_setting_des_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:gravity="center|right"
            style="@style/CreateTeamText"
            android:text="奥菲法师打发士大夫士大夫撒地方的萨芬撒>"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/edit_color_grey"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/divder_color_grey"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/edit_color_grey"/>


    <RelativeLayout
        android:id="@+id/team_setting_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:background="@color/White">

        <TextView
            style="@style/CreateTeamText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:text="团队成员管理：" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/edit_color_grey"
        />


    <RelativeLayout
        android:id="@+id/team_setting_invate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:background="@color/White">

        <TextView
            style="@style/CreateTeamText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:text="邀请好友加入团队：" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/edit_color_grey"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/divder_color_grey"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/edit_color_grey"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/team_setting_disappear"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_btn_blue_radius_5dip"
        android:gravity="center"
        android:text="退出团队"
        android:textColor="@color/BtnTextColorWhite"
        android:textSize="18sp" />

</LinearLayout>