<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_above="@id/mainFrame"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_white"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/firstPage"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/firstIv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/tab_one" />

            <TextView
                android:id="@+id/firstTv"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:textColor="@color/light_gray"
                android:textSize="10sp"
                android:text="赛事活动"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondPage"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/secondIv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/tab_two" />

            <TextView
                android:id="@+id/secondTv"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:textSize="10sp"
                android:textColor="@color/light_gray"
                android:text="发现" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdPage"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thirdIv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/tab_three" />

            <TextView
                android:id="@+id/thirdTv"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:textSize="10sp"
                android:textColor="@color/light_gray"
                android:text="运动" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourPage"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fourIv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/tab_four" />

            <TextView
                android:id="@+id/fourTv"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:textSize="10sp"
                android:textColor="@color/light_gray"
                android:text="运动圈" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fivePage"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fiveIv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/tab_five" />

            <TextView
                android:id="@+id/fiveTv"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:textSize="10sp"
                android:textColor="@color/light_gray"
                android:text="我" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/cutoffrule"
        android:layout_above="@id/ll">

    </View>

    <RelativeLayout
        android:id="@+id/ad_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/jump_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:background="@drawable/count_down"
            android:padding="5dp">

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="100s Jusmp"
                android:textColor="@color/White"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳过"
                android:textColor="@color/White"
                android:textSize="20sp" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
