<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/light_green"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <include layout="@layout/main_toolbar" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="152dp"
        android:src="@drawable/group_logo"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_color_grey"
        android:textSize="12sp"
        android:text="欢迎热爱运动的群体，创建属于自己的团体"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_dark_shadow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_color_grey"
        android:textSize="18sp"
        android:text="团队特权"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/text_color_grey"
        android:text="1、带领团队报名指定团队比赛项目"
        style="@style/CreateTeamText1"
        android:paddingLeft="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/text_color_grey"
        android:text="2、200人以上的团队，可以申请为俱乐部"
        style="@style/CreateTeamText1"
        android:paddingLeft="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/text_color_grey"
        android:text="3、俱乐部可以发起团队"
        style="@style/CreateTeamText1"
        android:paddingLeft="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/BtnBlue"
        android:text="备注：团队上限人数为500"
        style="@style/CreateTeamText1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_dark_shadow" />


    <Button
        android:id="@+id/create_team_submit1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_btn_blue_radius_5dip"
        android:gravity="center"
        android:text="创建团队"
        android:textColor="@color/BtnTextColorWhite"
        android:textSize="18sp" />

</LinearLayout>