<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnBackPersonalizePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#00000000"
            android:text="@string/BackBtnIcon"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="110dp"
            android:text="@string/Personalize"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:text="@string/HelpUsHelpYourSelf"
        android:textColor="#ffffff"
        android:textSize="@dimen/edit_text_size_15sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backgroud_round_corner_grey"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/backgroud_round_corner_white"
            android:orientation="vertical" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <EditText
                    android:id="@+id/etWeightPersonalize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/Weight"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="@dimen/edit_text_size_15sp" 
                    android:textColor="#c3c3c9"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="@string/Kilogram"
                    android:textSize="@dimen/edit_text_size_15sp" 
                    android:textColor="#898989"/>

                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/BackgroudLightGrey" />

                <EditText
                    android:id="@+id/etHeightPersonalize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="#c3c3c9"
                    android:hint="@string/Height"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/edit_text_size_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="@string/Centimeter"
                    android:textSize="@dimen/edit_text_size_15sp"
                    android:textColor="#898989" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/BackgroudLightGrey" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" >

                <ImageView
                    android:id="@+id/ivUserHwPersonalize"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/addphoto"
                    android:paddingBottom="10dp"
                    android:scaleType="centerCrop"
                     />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="@string/SlightTouchToAddPersonalImage"
                    android:textAlignment="center" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnDropPersonalize"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn_deep_grey_5dip"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/Drop"
                android:textColor="#e9e9e9"
                android:textSize="@dimen/btn_text_size_18sp" />

            <Button
                android:id="@+id/btnJoinNowPersonalize"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_btn_blue_radius_5dip"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/Finish"
                android:textColor="@color/BtnTextColorWhite"
                android:textSize="@dimen/btn_text_size_18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>