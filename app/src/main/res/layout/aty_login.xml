<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootAtyLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backgroud_round_corner_grey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/backgroud_round_corner_white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etPhoneNumLogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="@string/PleaseEnterYourPhoneNumber"
                android:inputType="phone"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:textSize="@dimen/edit_text_size_12sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/BackgroudLightGrey">

            </View>

            <EditText
                android:id="@+id/etPasswordLogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:textSize="@dimen/edit_text_size_12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnForgetPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:text="@string/ForgetPassword"
            android:textColor="@color/BtnTextColorWhite"
            android:textSize="@dimen/btn_text_size_18sp" />

        <Button
            android:id="@+id/btnLoginNow"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_btn_blue_radius_10dip"
            android:text="@string/LoginNow"
            android:textColor="@color/BtnTextColorWhite"
            android:textSize="@dimen/btn_text_size_18sp" />
    </LinearLayout>

</RelativeLayout>
