<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@drawable/actionbarbg"
    android:gravity="center_vertical"
    android:id="@+id/topBar">
    <ImageView android:id="@+id/ivBackBtnGameInformation"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/backbtn"
        />
	<TextView 
	    android:id="@+id/tvTitleGameInformation"
	    android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|right"
        android:text="协会信息"
        android:textSize="22dp"
        android:textColor="#ffffff"
        />
	<ImageView 
	    android:id="@+id/arrowGameInformation"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/arrowdown"
	    android:layout_gravity="center_vertical"
	    android:layout_marginRight="50dp"/>
    <ImageView android:id="@+id/ivMessageBtnGameInformation"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/messagebtn"
        android:visibility="invisible"
        />
</LinearLayout>
