<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minHeight="40dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:background="@drawable/dialog_sport_shape"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tyepone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/light_gray"
            android:layout_gravity="center"
            android:text="提示" />

        <TextView
            android:id="@+id/typetwo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/light_gray"
            android:layout_gravity="center"
            android:text="登陆成功 !"
            android:background="@color/son_bg_color" />

        <TextView
            android:id="@+id/typethree"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/light_gray"
            android:text="绑定手机账号，同步数据"
            android:background="@color/son_bg_color" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/cutoffrule" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="去绑定"
                android:id="@+id/gotobind"
                android:textColor="@color/soncolorblue" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/cutoffrule" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/nobindmore"
                android:text="不再提示"
                android:textColor="@color/soncolorblue" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/cutoffrule" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/nexttime"
                android:text="下次再说"
                android:textColor="@color/soncolorblue" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
