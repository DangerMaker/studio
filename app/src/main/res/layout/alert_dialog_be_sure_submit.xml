<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/alert_dialog_bg" 
    android:layout_gravity="center"
    >
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="提示"
        android:textSize="20dp"
        android:textColor="#000000"
        android:gravity="center"/>
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="信息填写并提交"
        android:textColor="#222222"
        android:textSize="12dp"
        android:gravity="center"/>
    
    <View android:layout_width="fill_parent"
    	android:layout_marginTop="30dp"
        android:layout_height="1dp"
        android:background="#b0b0b2"
        />
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <Button android:id="@+id/btnCertainAlertDialogBeSureToSubmit"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="确认"
            android:gravity="center"
            android:textSize="19dp"
            android:textColor="#268ba9"
            android:background="#00000000"
            />
        <View android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#b0b0b2"/>
        <Button android:id="@+id/btnCancelAlertDialogBeSureToSubmit"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="取消"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="19dp"
            android:textColor="#268ba9"
            android:background="#00000000"/>
    </LinearLayout>

</LinearLayout>
